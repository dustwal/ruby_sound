loud = effect_by_time { |t, sound| 2*sound[t] }
fade = effect_by_sample do |t,sound|
  if t > 0.95
    sound[t]*(1-20*(t-0.95))
  else
    sound[t]
  end
end

fp = 'sample_file.(wav|freq|snd)'
ssound = fp -> fade -> loud

b1 [1:ssound] (arg)
  ~o3 c d (220,8) f (440)
  ~f~ if arg == 0
end
